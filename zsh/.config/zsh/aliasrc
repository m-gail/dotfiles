# ls
alias ls="exa -Fgh --icons"
alias l="ls"
alias ll="ls -l"
alias lla="ls -la"
alias la="ls -a"

# mkdir
alias mkdir="mkdir -pv"

# cd
function .. {
    count=$1
    [[ $1 -lt 1 ]] && count=1

    for i in {1..$count}
    do
        cd ..
    done
}

# confirmations
alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'
alias ln='ln -i'

# vim
alias vim="nvim"
alias v="vim"
alias vi="vim"
alias sv="sudoedit"

# python
alias pe="pipenv"

